---
const actionsLog = [
	{ light: "red", action: "Nurse Lily assigned patient to Dr. Smith" },
	{ light: "green", action: "Dr. Smith prescribed medication to patient" },
	{ light: "green", action: "Nurse Lily updated patient records" },
	{ light: "yellow", action: "Dr. Smith requested patient to undergo MRI" },
];
---

<div class="ActionsPage">
	<h3>Personnel Actions</h3>
	<div class="ActionsPage__actions">
		{
			actionsLog.map((log, index) => (
				<div class="ActionsPage__actions__item">
					<div
						class="ActionsPage__actions__item__light"
						style={{ backgroundColor: log.light }}
					/>
					<p class="ActionsPage__actions__item__text">{log.action}</p>
					<p class="ActionsPage__actions__item__time">12:20</p>
				</div>
			))
		}
	</div>
</div>

<style lang="scss">
	.ActionsPage {
		box-shadow: 0px 0px 42.6px 0px #00000012;
		padding: 1.5rem 1rem;
		border-radius: 0.5rem;

		h3 {
			margin-bottom: 0.5rem;
			font-size: 1.2rem;
			margin-bottom: 1rem;
		}

		&__actions {
			display: flex;
			flex-direction: column;
			align-items: stretch;
			gap: 1rem;

			&__item {
				display: flex;
				flex-direction: row;
				align-items: center;
				gap: 1rem;

				&__light {
					width: 1.5rem;
					height: 1.5rem;
					border-radius: 50%;
				}

				&__time {
					margin-left: auto;
					color: #8080808c;
				}
			}
		}
	}
</style>
